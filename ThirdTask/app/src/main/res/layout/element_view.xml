<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="88dp">

  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="88dp"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <com.awesoon.thirdtask.view.ElementColorView
      android:id="@+id/element_color"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/oval">
    </com.awesoon.thirdtask.view.ElementColorView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingLeft="56dp"
      android:paddingRight="16dp">

      <TextView
        android:id="@+id/element_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"/>

      <TextView
        android:id="@+id/element_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.54"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"/>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
          android:id="@+id/element_created_time"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:alpha="0.54"
          android:drawableLeft="@drawable/ic_add_black_16dp"
          android:drawablePadding="4dp"
          android:paddingRight="6dp"
          android:textSize="14sp"/>

        <TextView
          android:id="@+id/element_last_updated_time"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:alpha="0.54"
          android:drawableLeft="@drawable/ic_edit_black_16dp"
          android:drawablePadding="4dp"
          android:paddingRight="6dp"
          android:textSize="14sp"/>

        <TextView
          android:id="@+id/element_last_viewed_time"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:alpha="0.54"
          android:drawableLeft="@drawable/ic_eye_black_16dp"
          android:drawablePadding="4dp"
          android:textSize="14sp"/>
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>

  <FrameLayout
    android:id="@+id/remove_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:padding="16dp">

    <View
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:background="@drawable/ic_close_circle_grey"/>
  </FrameLayout>
</RelativeLayout>